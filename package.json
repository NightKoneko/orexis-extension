{
  "name": "orexis-extension",
  "version": "1.0.4",
  "type": "module",
  "scripts": {
    "dev": "npm run build",
    "dev:watch": "concurrently \"npm run watch:content\" \"npm run watch:background\" \"npm run watch:injector\"",
    "build": "npm run build:content && npm run build:background && npm run build:injector",
    "build:firefox": "cross-env MANIFEST_TARGET=firefox npm run build",
    "build:content": "cross-env ENTRY=content vite build",
    "build:background": "cross-env ENTRY=background vite build",
    "build:injector": "cross-env ENTRY=injector vite build",
    "watch:content": "cross-env ENTRY=content vite build --watch",
    "watch:background": "cross-env ENTRY=background vite build --watch",
    "watch:injector": "cross-env ENTRY=injector vite build --watch",
    "typecheck": "tsc --noEmit",
    "updates:generate": "node scripts/generate-update-manifests.mjs",
    "sign:firefox": "npm run build:firefox && web-ext sign --source-dir=dist --channel unlisted"
  },
  "dependencies": {
    "antd": "^5.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-components": "^6.3.11"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.287",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  }
}
